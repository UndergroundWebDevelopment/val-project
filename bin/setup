#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  if system "which createdb"
    puts "== Found Postgres =="
  else
    puts "You need to install PostgreSQL. If you use Homebrew, run:"
    puts "        brew install postgresql"
    exit
  end

  puts "== Installing dependencies =="
  system "gem install bundler foreman childprocess --conservative"
  system "bundle check || bundle install"

  unless File.exist?(".env")
    puts "\n== Copying sample .env file =="
    system "cp .env.sample .env"
  end

  puts "\n== Preparing database =="
  system "bin/setup_db"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  if File.exist?("tmp/pids/puma.pid")
    system "pumactl -P tmp/pids/puma.pid restart"
  else
    puts "VAL Project successfully installed. To start the server, run:"
    puts "    foreman start"
  end
end
